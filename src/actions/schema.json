{
  "$schema": "http://json-schema.org/schema",
  "id": "SchematicsNgxDemoAction",
  "title": "NgxDemo Action Options Schema",
  "type": "object",
  "properties": {
    "name": {
      "description": "The name of the action.",
      "type": "string",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "Name of the action please ?"
    },
    "path": {
      "type": "string",
      "format": "path",
      "description": "The path to create the component.",
      "visible": false
    }
  },
  "required": [
    "name"
  ]
}